@model IEnumerable<ASPNZBat.Models.SiteSettings>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.maxSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nearlyFullSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.plentySeats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.maxSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nearlyFullSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.plentySeats)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
